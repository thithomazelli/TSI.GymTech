@model IEnumerable<TSI.GymTech.Entity.Models.AccessLog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<head>
    <title>GymTech - Log de Acesso</title>
</head>

<!-- Enabled filters and buttons to datatable -->
<script>
    $(document).ready(function () {
        LoadDataTableButtonsAndFilterAndOrdering(tblAccessLogs, 3);
    });
</script>

<script src="@Url.Content("~/Scripts/Utility/AccessLogUtility.js")" type="text/javascript"></script>

<!-- Begin Page Content -->
<div class="d-sm-flex align-items-center justify-content-between mb-1">
    <h1 class="h4 mb-2 text-gray-800">Log de Acesso</h1>
    @*<a href=@Url.Action("Create", "AccessLog") class="d-none d-sm-inline-block btn btn-sm btn-labeled btn-success shadow-sm">
        <i class="fas fa-history text-white-35"></i>
        <span class="btn-label">Create</span>
    </a>*@
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="stripe row-border" id="tblAccessLogs" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Person.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccessType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MessageDisplayed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </th>
                    @*<th></th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.AccessLogId">
                        <td>
                            @{ var controllerName = item.Person.ProfileType == TSI.GymTech.Entity.Enumerates.PersonType.Student ? "Student" : "User"; }
                            @Html.ActionLink(item.Person.Name, "Edit", controllerName, new { id = item.Person.PersonId }, null)
                        </td>
                        <td>
                            @typeof(TSI.GymTech.Entity.App_LocalResources.GateStatusType).GetProperty(Enum.GetName(typeof(TSI.GymTech.Entity.Enumerates.GateStatusType), item.AccessType)).GetValue(null)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MessageDisplayed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        @*<td>
                            <a href=@Url.Action("Edit", "AccessLog", new { id = item.AccessLogId })>
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>*@
                        <td>
                            <a href="#" onClick="DeleteAccessLog('@item.AccessLogId', 'tblAccessLogs', 'AccessLog');">
                                <i style="color: red;" class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>