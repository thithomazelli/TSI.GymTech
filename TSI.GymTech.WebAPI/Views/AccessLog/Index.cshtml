@model IEnumerable<TSI.GymTech.Entity.Models.AccessLog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<head>
    <title>GymTech - Log de Acesso</title>
</head>

<!-- Begin Page Content -->
<div class="d-flex align-items-center justify-content-between mb-1">
    <h1 class="h4 mb-2 text-gray-800">Log de Acesso</h1>
    <div class="d-grid float-right">
        <a id="seven" href="" onclick="LoadAccessLogTableFilters('7', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Últimos 7 dias
        </a>
        <a id="fifteen" href="" onclick="LoadAccessLogTableFilters('15', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Últimos 15 dias
        </a>
        <a id="thirty" href="" onclick="LoadAccessLogTableFilters('30', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Últimos 30 dias
        </a>
        <a id="sixty" href="" onclick="LoadAccessLogTableFilters('60', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Últimos 60 dias
        </a>
        <a id="ninety" href="" onclick="LoadAccessLogTableFilters('90', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Últimos 90 dias
        </a>
    </div>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="stripe row-border" id="tblAccessLogs" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Person.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccessType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MessageDisplayed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </th>
                    @*<th></th>*@
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>


<!-- Enabled filters and buttons to datatable -->
<script>
    $(document).ready(function () {
        LoadAccessLogTableFilters();
        LoadAccessLogDataTable(null, 3);
    });
</script>


@*DataTable DateTime library*@
<script src="@Url.Content("~/Content/vendor/datatables/moment.min.js")"></script>
<script src="@Url.Content("~/Content/vendor/datatables/datetime-moment.js")"></script>

<!-- Utility library -->
<script src="@Url.Content("~/Scripts/Utility/AccessLogUtility.js")" type="text/javascript"></script>