@model TSI.GymTech.WebAPI.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Alterar Senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@ViewBag.Title</h4>
<hr />

<section id="loginForm" class="user col-lg-5">
    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-login-group  input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-unlock-alt"></i></span>
            </div>
            @Html.PasswordFor(m => m.OldPassword, new { placeholder = "Senha Atual", @class = "form-control  form-control-user" })
        </div>
        <div class="form-login-group  input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-unlock-alt"></i></span>
            </div>
            @Html.PasswordFor(m => m.NewPassword, new { placeholder = "Nova Senha", @class = "form-control  form-control-user" })
        </div>
        <div class="form-login-group  input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-unlock-alt"></i></span>
            </div>
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirma Nova Senha", @class = "form-control  form-control-user" })
        </div>

        <div class="form-login-group ">
            <input type="submit" value="Alterar Senha" class="btn btn-dark btn-user btn-block" />
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
