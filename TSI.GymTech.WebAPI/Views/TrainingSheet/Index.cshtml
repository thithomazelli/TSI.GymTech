@model IEnumerable<TSI.GymTech.Entity.Models.TrainingSheet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<head>
    <title>GymTech - Training Sheets</title>
</head>

<!-- Enabled filters and buttons to datatable -->
<script>
    $(document).ready(function () {
        LoadDataTableButtonsAndFilter(tblTrainingSheet);
    });
</script>

<!-- Begin Page Content -->
<div class="d-sm-flex align-items-center justify-content-between mb-1">
    <h1 class="h3 mb-2 text-gray-800">Training Sheets</h1>
    <a href=@Url.Action("Create", "TrainingSheet") class="d-none d-sm-inline-block btn btn-sm btn-labeled btn-success shadow-sm">
        <i class="fas fa-user-plus text-white-30"></i>
        <span class="btn-label">Create</span>
    </a>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="stripe row-border" id="tblTrainingSheet" width="100%" cellspacing="0">
            <thead>
                <tr>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Student.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Trainer.Name)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Cycle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Revaluation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Comments)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Student.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Trainer.Name)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Cycle)
                        </td>
                        <td>
                            @typeof(TSI.GymTech.Entity.App_LocalResources.TrainingSheetStatus).GetProperty(Enum.GetName(typeof(TSI.GymTech.Entity.Enumerates.TrainingSheetStatus), item.Status)).GetValue(null)
                        </td>
                        <td>
                            @typeof(TSI.GymTech.Entity.App_LocalResources.TrainingSheetType).GetProperty(Enum.GetName(typeof(TSI.GymTech.Entity.Enumerates.TrainingSheetType), item.Type)).GetValue(null)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Revaluation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comments)
                        </td>
                        <td>
                            <a href=@Url.Action("Edit", "TrainingSheet", new { id = item.TrainingSheetId })>
                                <i class="fas fa-user-edit"></i>
                            </a>
                        </td>
                        <td>
                            <a href=@Url.Action("Delete", "TrainingSheet", new { id = item.TrainingSheetId })>
                                <i style="color: red;" class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>