@model IEnumerable<TSI.GymTech.Entity.Models.Payment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<head>
    <title>GymTech - Pagamentos</title>
</head>

<!-- Begin Page Content -->
<div class="d-flex align-items-center justify-content-between mb-1">
    <h1 class="h4 mb-2 text-gray-800">Pagamentos</h1>
    <div class="d-grid float-right">
        <a id="all" href="" onclick="LoadPaymentTableFilters('All', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Todos
        </a>
        <a id="paymentDelayed" href="" onclick="LoadPaymentTableFilters('PaymentDelayed', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Em atraso
        </a>
        <a id="paymentDue" href="" onclick="LoadPaymentTableFilters('PaymentDue', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            À vencer
        </a>
        <a id="paymentPaid" href="" onclick="LoadPaymentTableFilters('PaymentPaid', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Pagos
        </a>
        <a href=@Url.Action("Create", "Payment") class="d-sm-inline-block btn btn-sm btn-labeled btn-success shadow-sm mb-2">
            <i class="fas fa-user-plus text-white-30"></i>
            <span class="btn-label">Novo</span>
        </a>
    </div>
</div>

@Html.AntiForgeryToken()

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="stripe row-border" id="tblPayments" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DatePaymentEstimated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalPrice)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Enabled filters and buttons to datatable -->
<script>
    $(document).ready(function () {
        LoadPaymentTableFilters();
        LoadPaymentDataTable();
    });
</script>

@*DataTable DateTime library*@
<script src="@Url.Content("~/Content/vendor/datatables/moment.min.js")"></script>
<script src="@Url.Content("~/Content/vendor/datatables/datetime-moment.js")"></script>

<!-- Utility library -->
<script src="@Url.Content("~/Scripts/Utility/PaymentUtility.js")" type="text/javascript"></script>
