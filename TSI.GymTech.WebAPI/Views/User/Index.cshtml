@model IEnumerable<TSI.GymTech.Entity.Models.Person>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<head>
    <title>GymTech - Usuários</title>
</head>

<!-- Enabled filters and buttons to datatable -->
<script>
    $(document).ready(function () {
        LoadDataTableButtonsAndFilter(tblUsers);
    });
</script>

<script src="@Url.Content("~/Scripts/Utility/UserUtility.js")" type="text/javascript"></script>

<!-- Begin Page Content -->
<div class="d-sm-flex align-items-center justify-content-between mb-1">
    <h1 class="h4 mb-2 text-gray-800">Usuários</h1>
    <a href=@Url.Action("Create", "User") class="d-sm-inline-block btn btn-sm btn-labeled btn-success shadow-sm">
        <i class="fas fa-user-plus text-white-30"></i>
        <span class="btn-label">Novo Usuário</span>
    </a>
</div>

@Html.AntiForgeryToken()

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        @*<div class="table-responsive">*@
        <table class="stripe row-border" id="tblUsers" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PersonId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProfileType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SocialSecurityCard)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.MobilePhone)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.PersonId">
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PersonId)
                        </td>
                        <td>
                            @typeof(TSI.GymTech.Entity.App_LocalResources.PersonType).GetProperty(Enum.GetName(typeof(TSI.GymTech.Entity.Enumerates.PersonType), item.ProfileType)).GetValue(null)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SocialSecurityCard)
                        </td>
                        <td>
                            @typeof(TSI.GymTech.Entity.App_LocalResources.PersonStatus).GetProperty(Enum.GetName(typeof(TSI.GymTech.Entity.Enumerates.PersonStatus), item.Status)).GetValue(null)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.MobilePhone)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <a href=@Url.Action("Edit", "User", new { id = item.PersonId })>
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                        <td>
                            @*<button type="button" onClick="DeleteUser(item.PersonId, item.Name);">
                                    <i style="color: red;" class="fas fa-trash-alt"></i>
                                </button>*@

                            <a href="#" onClick="DeleteUser('@item.PersonId', '@item.Name', 'tblUsers');">
                                <i style="color: red;" class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @*</div>*@
    </div>
</div>