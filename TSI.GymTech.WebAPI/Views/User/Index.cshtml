@model IEnumerable<TSI.GymTech.Entity.Models.Person>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<head>
    <title>GymTech - Usuários</title>
</head>

<!-- Begin Page Content -->
<div class="d-flex align-items-center justify-content-between mb-1">
    <h1 class="h4 mb-2 text-gray-800">Usuários</h1>
    <a href=@Url.Action("Create", "User") class="d-sm-inline-block btn btn-sm btn-labeled btn-success shadow-sm">
        <i class="fas fa-user-plus text-white-30"></i>
        <span class="btn-label">Novo</span>
    </a>
</div>

@Html.AntiForgeryToken()

<div class="card shadow mb-4">
    <div class="card-body">
        <table class="stripe row-border" id="tblUsers" style="width:100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PersonId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProfileType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SocialSecurityCard)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Enabled filters and buttons to datatable -->
<script>
    $(document).ready(function () {
        LoadUsersDataTable();
    });
</script>

<script src="@Url.Content("~/Scripts/Utility/UserUtility.js")" type="text/javascript"></script>
