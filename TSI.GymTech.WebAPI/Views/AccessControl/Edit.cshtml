@model TSI.GymTech.Entity.Models.AccessControl

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>GymTech - Controle de Acesso</title>
</head>

@using (Html.BeginForm("Edit", "AccessControl", FormMethod.Post, new { id = "frmAccessControl", name = "frmAccessControl" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "validation-message help-block" })
        @Html.HiddenFor(model => model.AccessControlId)

        <div class="edit-container">
            @*Fields and Grid views*@
            <div class="col-lg-9 col-md-9 col-sm-12 col-md-8">
                <div class="profile-content">
                    <h5>Controle de Acesso</h5>
                    <hr />
                    <div class="form-row">
                        <div class="form-group col-md-6 col-sm-12">
                            @Html.LabelFor(model => model.IpAddress, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="input-group col-md-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-network-wired"></i></span>
                                </div>
                                @Html.EditorFor(model => model.IpAddress, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.IpAddress, "", new { @class = "validation-message help-block" })
                        </div>

                        <div class="form-group col-md-6 col-sm-12">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="input-group col-md-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-fw fa-cog"></i></span>
                                </div>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "validation-message help-block" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6 col-sm-12">
                            @Html.LabelFor(model => model.IsStandard, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="input-group col-md-12">
                                @Html.EditorFor(model => model.IsStandard)
                            </div>
                            @Html.ValidationMessageFor(model => model.IsStandard, "", new { @class = "validation-message help-block" })
                        </div>
                    </div>
                </div>

                @*Buttons*@
                <section class="profile-content">
                    <div class="form-row">
                        <div class="col-6 mt-2">
                            @Html.ActionLink("Voltar para Lista de Controle de Acesso", "Index")
                        </div>
                        <div class="col-6 text-right">
                            <input id="btnSaveAccessControl" type="submit" value="Salvar" class="btn btn-success align-content-end" />
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<!-- Utility library -->
<script src="@Url.Content("~/Scripts/Utility/AccessControlUtility.js")" type="text/javascript"></script>