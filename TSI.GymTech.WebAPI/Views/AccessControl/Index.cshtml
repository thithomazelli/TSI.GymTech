@model IEnumerable<TSI.GymTech.Entity.Models.AccessControl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<head>
    <title>GymTech - Controle de Acesso</title>
</head>

<!-- Enabled filters and buttons to datatable -->
<script>
    $(document).ready(function () {
        LoadDataTableButtonsAndFilter(tblAccessControls);
    });
</script>

<script src="@Url.Content("~/Scripts/Utility/AccessControlUtility.js")" type="text/javascript"></script>

<!-- Begin Page Content -->
<div class="d-sm-flex align-items-center justify-content-between mb-1">
    <h1 class="h4 mb-2 text-gray-800">Controle de Acesso</h1>
    <a href=@Url.Action("Create", "AccessControl") class="d-sm-inline-block btn btn-sm btn-labeled btn-success shadow-sm">
        <i class="fas fa-fw fa-cog text-white-35"></i>
        <span class="btn-label">Nova Catraca</span>
    </a>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="stripe row-border" id="tblAccessControls" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IpAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsStandard)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.AccessControlId">
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IpAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsStandard)
                        </td>
                        <td>
                            <a href=@Url.Action("Edit", "AccessControl", new { id = item.AccessControlId })>
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                        <td>
                            <a href="#" onClick="DeleteAccessControl('@item.AccessControlId', '@item.Name', 'tblAccessControls');">
                                <i style="color: red;" class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>