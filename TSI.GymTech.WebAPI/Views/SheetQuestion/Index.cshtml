@model IEnumerable<TSI.GymTech.Entity.Models.SheetQuestion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<head>
    <title>GymTech - Perguntas</title>
</head>

<!-- Begin Page Content -->
<div class="d-flex align-items-center justify-content-between mb-1">
    <h1 class="h4 mb-2 text-gray-800">Perguntas</h1>
    <a href=@Url.Action("Create", "SheetQuestion") class="d-none d-sm-inline-block btn btn-sm btn-labeled btn-success shadow-sm">
        <i class="fas fa-question text-white-35"></i>
        <span class="btn-label">Nova</span>
    </a>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="stripe row-border" id="tblSheetQuestions" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Question)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QuestionType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AnswerType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Order)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>


<!-- Enabled filters and buttons to datatable -->
<script>
    $(document).ready(function () {
        LoadSheetQuestionDataTable();
    });
</script>

<!-- Utility library -->
<script src="@Url.Content("~/Scripts/Utility/SheetQuestionUtility.js")" type="text/javascript"></script>