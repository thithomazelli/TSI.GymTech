@model IEnumerable<TSI.GymTech.Entity.Models.EvaluationSheet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<head>
    <title>GymTech - Evaluation Sheets</title>
</head>

<!-- Enabled filters and buttons to datatable -->
<script>
    $(document).ready(function () {
        LoadDataTableButtonsAndFilter(tblEvaluationSheets);
    });
</script>

<!-- Begin Page Content -->
<div class="d-sm-flex align-items-center justify-content-between mb-1">
    <h1 class="h3 mb-2 text-gray-800">Evaluation Sheets</h1>
    <a href=@Url.Action("Create", "EvaluationSheet") class="d-none d-sm-inline-block btn btn-sm btn-labeled btn-success shadow-sm">
        <i class="fas fa-file-contract text-white-35"></i>
        <span class="btn-label">Create</span>
    </a>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="stripe row-border" id="tblEvaluationSheets" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Student.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Trainer.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Revaluation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Comments)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Trainer.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Revaluation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comments)
                        </td>
                        <td>
                            <a href=@Url.Action("Edit", "EvaluationSheet", new { id = item.EvaluationSheetId })>
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                        <td>
                            <a href=@Url.Action("Delete", "EvaluationSheet", new { id = item.EvaluationSheetId })>
                                <i style="color: red;" class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>