@model IEnumerable<TSI.GymTech.Entity.Models.EvaluationSheet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<head>
    <title>GymTech - Avaliações</title>
</head>

<!-- Begin Page Content -->
<div class="d-flex align-items-center justify-content-between mb-1">
    <h1 class="h4 mb-2 text-gray-800">Avaliações Físicas</h1>
    <a href=@Url.Action("Create", "EvaluationSheet") class="d-none d-sm-inline-block btn btn-sm btn-labeled btn-success shadow-sm">
        <i class="fas fa-file-contract text-white-35"></i>
        <span class="btn-label">Novo</span>
    </a>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="stripe row-border" id="tblEvaluationSheets" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Revaluation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Comments)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Enabled filters and buttons to datatable -->
<script>
    $(document).ready(function () {
        LoadEvaluationSheetsDataTable();
    });
</script>

<!-- Utility library -->
<script src="@Url.Content("~/Scripts/Utility/EvaluationSheetUtility.js")" type="text/javascript"></script>