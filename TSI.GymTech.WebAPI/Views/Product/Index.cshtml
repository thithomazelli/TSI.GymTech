@model IEnumerable<TSI.GymTech.Entity.Models.Product>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<head>
    <title>GymTech - Produtos</title>
</head>

<!-- Begin Page Content -->
<div class="d-flex align-items-center justify-content-between mb-1">
    <h1 class="h4 mb-2 text-gray-800">Produtos</h1>
    <a href=@Url.Action("Create", "Product") class="d-sm-inline-block btn btn-sm btn-labeled btn-success shadow-sm">
        <i class="fab fa-product-hunt text-white-35"></i>
        <span class="btn-label">Novo</span>
    </a>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <table class="stripe row-border" id="tblProducts" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SuggestedPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QuantityStock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quota)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Enabled filters and buttons to datatable -->
<script>
    $(document).ready(function () {
        LoadProductDataTable();
    });
</script>

<!-- Utility library -->
<script src="@Url.Content("~/Scripts/Utility/ProductUtility.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Utility/UtilityHelper.js")" type="text/javascript"></script>