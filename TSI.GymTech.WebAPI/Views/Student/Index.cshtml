@model IEnumerable<TSI.GymTech.Entity.Models.Person>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<head>
    <title>GymTech - Alunos</title>
</head>

<!-- Begin Page Content -->
<div class="d-flex align-items-center justify-content-between mb-1">
    <h1 class="h4 mr-4 mb-2 text-gray-800">Alunos</h1>
    <div class="d-grid float-right">
        <a id="all" href="" onclick="LoadStudentTableFilters('all', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Todos
        </a>
        <a id="frequent" href="" onclick="LoadStudentTableFilters('Frequent', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Ativos / Frequentes
        </a>
        <a id="notFrequent" href="" onclick="LoadStudentTableFilters('NotFrequent', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Ativos / Não Frequentes
        </a>
        <a id="inactive" href="" onclick="LoadStudentTableFilters('Inactive', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Inativos
        </a>
        <a id="birthday" href="" onclick="LoadStudentTableFilters('Birthday', true); return false;" class="d-sm-inline-block btn btn-sm btn-secondary shadow-sm mb-2">
            <i class="fas fa-filter text-white-50"></i>
            Aniversariantes
        </a>
        <a href=@Url.Action("Create", "Student") class="d-sm-inline-block btn btn-sm btn-labeled btn-success shadow-sm mb-2">
            <i class="fas fa-user-plus text-white-30"></i>
            <span class="btn-label">Novo</span>
        </a>
    </div>
</div>

@Html.AntiForgeryToken()

<div class="card shadow mb-4">
    <div class="card-body">
        <table class="stripe row-border" style="width:100%" id="tblStudents" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PersonId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SocialSecurityCard)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Enabled filters and buttons to datatable -->
<script>
    $(document).ready(function () {
        LoadStudentTableFilters();
        LoadStudentsDataTable();
    });
</script>

<!-- Utility library -->
<script src="@Url.Content("~/Scripts/Utility/StudentUtility.js")" type="text/javascript"></script>
